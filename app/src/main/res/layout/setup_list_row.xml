<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical">

    <ImageView
        android:id="@+id/setup_coinImage"
        android:layout_width="@dimen/coin_image_size"
        android:layout_height="@dimen/coin_image_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="false" />

    <TextView
        android:id="@+id/setup_coinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/coinImage"
        android:height="@dimen/coin_image_size"
        android:paddingLeft="10dp"

        android:textColor="@color/coin_title_color"
        android:textSize="@dimen/coin_title_size" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <CheckBox
        android:id="@+id/setup_coinSelection"
        android:layout_width="@dimen/coin_image_size"
        android:layout_height="@dimen/coin_image_size" />


</LinearLayout>